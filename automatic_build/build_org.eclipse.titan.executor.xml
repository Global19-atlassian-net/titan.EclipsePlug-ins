<project basedir="." default="build" name="org.eclipse.titan.executor">

	<import file="build_import.xml" />

    <target name="init">
        <mkdir dir="bin"/>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir="src">
                <exclude name="**/*.g"/>
                <exclude name="**/*.g4"/>
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
        <copy includeemptydirs="false" todir="bin">
            <fileset dir=".">
                <include name="toc.xml"/>
                <include name="icons/*"/>
            </fileset>
        </copy>
    </target>

    <target depends="init" name="build">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="${javac.debug}" debuglevel="${javac.debuglevel}"
				encoding="${javac.encoding}"
			   destdir="bin" source="${source}" target="${target}" failonerror="true">
            <src path="src"/>
            <classpath refid="PDE.classpath"/>
            <classpath refid="common.classpath"/>
            <classpath refid="designer.classpath"/>
        </javac>
    </target>

	<target name="build.jars" depends="build">
		<copy file="plugin.xml" todir="bin" />
		<mkdir dir="${result.dir}/plugins"/>
		<update.manifest file="${build.dir}/${executor.name}/META-INF/MANIFEST.MF"/>
		<jar destfile="${result.dir}/plugins/org.eclipse.titan.executor_${version.qualifier}.jar" 
			 manifest="${build.dir}/${executor.name}/META-INF/MANIFEST.MF">
			<fileset dir="bin" />
		</jar>
	</target>

    <target name="clean">
        <delete dir="bin"/>
    </target>
    <target depends="clean" name="cleanall"/>
</project>
